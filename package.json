{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@10.15.1",
	"engines": {
		"node": ">=20.18.1"
	},
	"scripts": {
		"prometheus:dev": "pnpm --filter astro-prometheus-node-integration dev",
		"otel:dev": "pnpm --filter astro-opentelemetry-integration dev",
		"prometheus:playground:dev": "pnpm --filter prometheus-playground dev",
		"otel:playground:dev": "pnpm --filter otel-playground dev",
		"prometheus:playground:build": "pnpm --filter prometheus-playground... build",
		"otel:playground:build": "pnpm --filter otel-playground... build",
		"build:all": "pnpm prometheus:playground:build && pnpm otel:playground:build",
		"dev": "pnpm --stream -r -parallel dev",
		"changeset": "changeset",
		"ci:version": "pnpm exec changeset version && pnpm install --no-frozen-lockfile && pnpm dedupe",
		"ci:publish": "pnpm exec changeset publish && git push --follow-tags",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"prepare": "husky",
		"test:e2e": "pnpm --filter playground test:e2e",
		"test:e2e:build": "pnpm --filter playground test:e2e:build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@changesets/cli": "^2.29.2",
		"@changesets/changelog-github": "^0.5.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.0.0"
	},
	"lint-staged": {
		"*": [
			"biome check --write"
		]
	},
	"volta": {
		"node": "22.19.0"
	}
}
