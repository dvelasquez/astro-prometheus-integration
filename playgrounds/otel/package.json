{
	"name": "otel-playground",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "nodemon -w ../../packages/astro-opentelemetry-integration/dist -e js,mjs,cjs,json -w ./astro.config.mts --exec \"astro dev\"",
		"start": "astro dev",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"build:all": "pnpm --filter astro-opentelemetry-integration --filter otel-playground build",
		"test:e2e": "playwright test",
		"test:e2e:prometheus": "ASTRO_OTEL_PRESET=prometheus playwright test",
		"test:e2e:grpc": "ASTRO_OTEL_PRESET=grpc playwright test",
		"test:e2e:http": "ASTRO_OTEL_PRESET=http playwright test",
		"test:e2e:grpc:mock": "ASTRO_OTEL_PRESET=grpc playwright test e2e/grpc-mock.spec.ts",
		"test:e2e:http:mock": "ASTRO_OTEL_PRESET=http playwright test e2e/http-mock.spec.ts",
		"test:e2e:grpc:mock-server": "ASTRO_OTEL_PRESET=grpc playwright test e2e/grpc-mock-server.spec.ts --workers=1",
		"test:e2e:http:mock-server": "ASTRO_OTEL_PRESET=http playwright test e2e/http-mock-server.spec.ts --workers=1",
		"test:e2e:all-presets": "pnpm test:e2e:prometheus && pnpm test:e2e:http:mock && pnpm test:e2e:grpc:mock",
		"test:e2e:all-mock-server": "pnpm test:e2e:http:mock-server && pnpm test:e2e:grpc:mock-server",
		"test:e2e:ci": "ASTRO_OTEL_PRESET=prometheus playwright test e2e/prometheus.spec.ts && pnpm test:e2e:http:mock-server && pnpm test:e2e:grpc:mock-server",
		"test:e2e:ci:reliable": "pnpm test:e2e:prometheus && pnpm test:e2e:http:mock-server && pnpm test:e2e:grpc:mock-server",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report",
		"test:e2e:build": "pnpm build:all && pnpm test:e2e:ci"
	},
	"dependencies": {
		"@astrojs/node": "9.4.4",
		"@tailwindcss/vite": "4.1.14",
		"astro": "5.14.1",
		"astro-integration-kit": "0.19.0",
		"astro-opentelemetry-integration": "workspace:*",
		"tailwindcss": "4.1.14"
	},
	"devDependencies": {
		"@astrojs/check": "0.9.4",
		"@playwright/test": "1.56.0",
		"@types/node": "24.7.2",
		"nodemon": "3.1.10",
		"typescript": "5.9.3"
	}
}
