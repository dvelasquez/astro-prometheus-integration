{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"files": {
		"ignore": ["dist", ".astro"]
	},
	"overrides": [
		{
			"include": [
				"**/*.test.ts",
				"**/*.test.js",
				"**/*.spec.ts",
				"**/*.spec.js"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
